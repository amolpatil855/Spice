@model Spice.Models.ViewModels.MenuItemViewModel
@using Spice.Extensions
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Confirm Delete</h2>

<br />


<div class="border backgroundWhite row">

    <div class="col-8">
        <form method="post" asp-action="Delete">
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Name" class="form-control" />
                    </div>
                    <span asp-validation-for="MenuItem.Name" class="text-danger"></span>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Description" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="MenuItem.Description" class="form-control"></textarea>
                    </div>
                    <span asp-validation-for="MenuItem.Description" class="text-danger"></span>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Price" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Price" class="form-control" />
                    </div>
                    <span asp-validation-for="MenuItem.Price" class="text-danger"></span>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Category.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.SubCategory.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Spicyness" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.MenuItem.Spicyness" asp-items="@Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>
                    </div>
                </div>
            </fieldset>

            <div class="col-8">
                <div class="col-8 offset-6">
                    <partial name="_DeleteAndBackToListButtonPartial" model="@Model.MenuItem.Id" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-3 offset-1">
        <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9" />
    </div>



</div>


@section scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format',
            readonly: 1
        });
    </script>

    <script>
    $(document).ready(function () {
        getSubCategory();
        $('#CategoryId').change(function () {
            getSubCategory();
        });
    });

        function getSubCategory() {
            var url = '@Url.Content("~/")' + "Admin/SubCategory/GetSubcategory";
            var ddlSourse = '#CategoryId';
            $.getJSON(url, { id: $(ddlSourse).val() }, function (data) {
                var items = '';
                $('#SubCategoryId').empty();
                $.each(data, function (i, subCategory) {
                    items += "<option value='" + subCategory.value + "'>" + subCategory.text + "</option>";
                });

                $('#SubCategoryId').html(items);
            });
        }
    </script>
}


